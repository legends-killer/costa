{
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:1420/"
  },
  "package": {
    "productName": "costa",
    "version": "0.0.2-alpha"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "security": {
      "csp": null
    },
    "bundle": { 
      "active": true,
      "targets": "all",
      "identifier": "com.costa.app",
      "icon": [
        "icons/icon.png",
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}